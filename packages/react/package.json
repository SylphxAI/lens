{
	"name": "@sylphx/lens-react",
	"version": "1.0.0",
	"description": "React bindings for Lens API framework",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target browser && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --outDir ./dist",
		"typecheck": "tsc --noEmit",
		"test": "bun test"
	},
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"lens",
		"react",
		"hooks",
		"signals"
	],
	"author": "SylphxAI",
	"license": "MIT",
	"dependencies": {
		"@sylphx/lens-client": "workspace:*",
		"@sylphx/lens-core": "workspace:*",
		"@preact/signals-react": "^2.2.0"
	},
	"peerDependencies": {
		"react": ">=18.0.0"
	},
	"devDependencies": {
		"@happy-dom/global-registrator": "^20.0.10",
		"@testing-library/react": "^16.2.0",
		"@types/react": "^18.3.12",
		"happy-dom": "^17.4.7",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"typescript": "^5.9.3"
	}
}
