{
	"extends": "@sylphx/tsconfig",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["ES2022", "DOM"],
		"noEmit": false,
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
