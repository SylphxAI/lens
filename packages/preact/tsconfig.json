{
	"extends": "@sylphx/tsconfig",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"lib": ["ES2022", "DOM"],
		"noEmit": false,
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
